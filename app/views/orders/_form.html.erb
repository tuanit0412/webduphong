<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% order.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>

      <div class="field">
        <%= form.label :name %>
          <%= form.text_field :name, size: 41 %>
      </div>

      <div class="field">
        <%= form.label :address %>
          <%= form.text_area :address, rows: 3, cols: 45 %>
      </div>

      <div class="field">
        <%= form.label :phone %>
          <%= form.text_field :phone, size: 41 %>
      </div>

      <div class="field">
        <%= form.label :email %>
          <%= form.email_field :email, size: 41 %>
      </div>

      <div class="field">
        <%= form.label :pay_type %>
          <%= form.select :pay_type, Order.pay_types.keys,
    prompt: 'Select a payment method' %>
      </div>
      <div class="field">
        <hr>
        <div class="giatien"> <%= form.label :total %> : <%= number_to_currency(@total) %> </div>
        <div hidden> <%= form.number_field :total, :value =>@total,:readonly => true%> </div>
       </div>

      <div class="actions">
        <%= form.submit %>
      </div>

      <% end %>
